<resources>

    <style name="LightDividerTransparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="DawandaNormalText" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DawandaTitleText" parent="DawandaNormalText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DawandaNavTitleText" parent="DawandaTitleText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DawandaListElementTextStyle" parent="DawandaTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="DawandaPriceTextStyle" parent="DawandaTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="RatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/ratingbar_primary</item>
    </style>

</resources>
