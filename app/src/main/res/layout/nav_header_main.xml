<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/Bike_nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/Bike_Medium_Distance"
    android:paddingLeft="@dimen/Bike_Medium_Distance"
    android:paddingRight="@dimen/Bike_Medium_Distance"
    android:paddingTop="@dimen/Bike_Medium_Distance"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="@dimen/Bike_NavIconSize"
        android:layout_height="@dimen/Bike_NavIconSize"
        android:paddingTop="@dimen/Bike_Medium_Distance"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        style="@style/BikeNavTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/Bike_Medium_Distance"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dayane_lima_souza" />

</LinearLayout>
